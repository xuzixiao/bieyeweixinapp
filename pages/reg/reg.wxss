.login{
  margin-top: 30rpx;
}
.loginmain{
  padding: 5px 10px;
}
.loginline{
width: 100%;
height: 50rpx;
padding: 20rpx 0rpx;
display: flex;
display: -webkit-flex;
border-bottom: #f1f1f1 solid 1px;
}
.loginline image{
  width: 40rpx;
  height: 40rpx;
  padding: 5rpx 10rpx;
}
.loginline input{
  height: 50rpx;
  width: 80%;
  line-height: 50rpx;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.loginIn{
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
}
.loginIn button{
  display: block;
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  color: #fff;
  background: #f54449;
}
.code{
  width: 200rpx!important;
  height: 60rpx!important;
  line-height: 60rpx!important;
  text-align: center;
  font-size: 25rpx;
  color: #fff;
  background: #f54449;
}
.other{
  width: 60%;
  height: 80rpx;
  margin: 0 20%;
  position: relative;
}
.other .line{
  display: block;
  width: 100%;
  height: 1px;
  background: #f1f1f1;
  position: absolute;
  left: 0px;
  top: 49%;
}
.other .line-text{
  display:block!important;
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 25rpx;
  background: #fff;
  color: #000;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -50rpx!important;
  margin-top: -15rpx!important;
}
.weixinlogin{
  background: #fff!important;
  color: #6cb835!important;
  line-height: 80rpx!important;
  display: flex!important;
  justify-content: center;
  
}
.weixinlogin image{
  width: 60rpx;
  height: 80rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.tab{
  width: 80%;
  height: 80rpx;
  display: flex;
  border:#f1f1f1 solid 1px;
  margin: 10rpx auto;
  border-radius: 10px;
  overflow: hidden;
}
.tab view{
  width: 50%;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
}
.tab .active{
  background: #f54449;
  color: #fff;
}
.loginIn button{
  margin-bottom: 10px;
}

