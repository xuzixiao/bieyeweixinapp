/* pages/my/my.wxss */
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  text-align: center;
  line-height: 2rem;
}
.building{
  display: block;
  font-size: 1rem;
}
.top{
  width: 100%;
  height: 350rpx;
  overflow: hidden;
  position: relative;
}
.top .bg{
  display: block;
  width: 100%;
  height: 400rpx;
  opacity: 0.7;
  z-index: 1;
}
.userinfo{
  width: 200rpx;
  position: absolute;
  top: 15%;
  left: 50%;
  margin-left: -100rpx;
  z-index: 3;
}
.zhezhao{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
  background: rgba(0,0,0,.1);
  z-index: 2;
}
.userinfo image{
  display: block;
  width: 80px;
  height: 80px;
  border:#fff solid 2px;
  border-radius: 50px;
  margin: 0 auto;
}
.userinfo text{
  font-size: 30rpx;
  line-height: 50rpx;
  color: #fff;
  padding: 0rpx 20rpx;
  margin-top: 30rpx;
}
.main{
  padding: 0px 10px;
}
.menulist{
  width: 100%;
  height: 80rpx;
  border-bottom:1px solid #e1e1e1;
  background: none!important;
  margin: 0px!important;
  padding: 0px!important;
}
button.menulist::after{
border:none;

}
.menulist text{
  display: block;
  line-height: 80rpx;
  float: left;
  font-size: 30rpx;
  color: #333;
  width: 400rpx;
  text-align: left;
}
.menulist image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
  float: left;
}
.login-in{
  border:#fff solid 2px;
  font-size: 24rpx!important;
  border-radius: 4px;
  font-weight: bold;
}

.outlogin{
  padding: 10px;
  margin-top:50px;
}
.outlogin button{
  font-size: 30rpx;
}
.userheadimg{
  width: 80px;
  height: 80px;
  position: relative;
}
.userheadimg image{
  display: block;
  width: 80px;
  height: 80px;
  position: absolute;
  left:0px;
  top: 0px; 
}
.userheadimg .morenheadimg{
  z-index: 5;
}
.userheadimg .headimg{
  z-index: 6;
}