/**index.wxss**/
.banner{
  width:100%;
  height:450rpx;
}
.banner swiper{
  width:100%;
  height: 100%;
}
.banner swiper image{
  width: 100%;
  height: 100%;
}
.search{
  width:100%;
  position: relative;
  height: 260rpx;
}
.searchcon{
  width:80%;
  height:auto;
  background: #fff;
  position: absolute;
  left:7%;
  top: -80rpx;
  border-radius: 5px;
  padding: 0px 3%;
  overflow:hidden;
  box-shadow:0rpx 0rpx 10rpx rgba(0, 0, 0, 0.2);
}
.searchcon::after{
  border: none;
}


.choseaddres{
  width: 100%;
  height: 120rpx;
  border-bottom: #e7e7e7 solid 1px;
  display:flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.choseaddres input{
  height: 60rpx;
  line-height: 60rpx;
  margin-top:35rpx; 
  padding-left: 10px;
  font-size: 28rpx;
  width: 10rem;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.declass{
  font-size:30rpx;
}
.getaddres{
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
  background: none;
  font-size: 26rpx;
  color: #666;
  border: none;
  position: static;
  text-align: right;
  display: flex;
  padding: 0;
  margin-left: 0px;
  margin-right: 10px;
}
.getaddres .position-icon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}
.getaddres text{
  line-height: 60rpx;
  margin-left: 10rpx;
}
.chosedate{
  display: flex;
  display: -webkit-flex;
  height: auto;
  padding: 20rpx 0px 20rpx; 
  border-bottom: #e7e7e7 solid 1px;
  }
.chosedate .date{
  text-align: center!important;
  font-size: 30rpx!important;
}

.days{
  font-size: 26rpx;
  color: #666;
  width: 4rem;
  height: 40rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 40rpx;
  border-bottom: #ccc solid 1px;

}
.chosedate data{
  text-align: center;
  height: 40rpx;
}
.date-declass{
  font-size:26rpx;
  text-align: center;
}
.gotosearch{
  padding: 25rpx 0;
}
.gotosearch button{
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  background:#f54449;
  color: #fff;
  font-size: 32rpx;
  letter-spacing: 0.1rem;
  border-radius: 35rpx;
  border: #fff solid 1px!important;
}
.gotosearch button::after{
  border: none; 
}


.citys{
  width: 100%;
}
.citys-title{
  display: block;
  width: 94%;
  margin: 0 3%;
  font-size: 36rpx;
  line-height: 80rpx;
  border-bottom: #e7e7e7 solid 1px;
  color: #666;
  padding-left: 5rpx;
}
.city-mian{
  height: 330rpx;
  white-space: nowrap;
  display: flex;
  margin:0.5rem 0rem; 
}
.city-mian .scroll-view-item{
  width: 240rpx;
  height: 330rpx;
  display: inline-block;
  padding-left: 0.5rem;
}
.city-mian .scroll-view-item:last-child{
  padding-right: 0.5rem;
}
.city-mian .scroll-view-item image{
  width: 240rpx;
  height: 330rpx;
}

