.comment{
  padding: 0 10px 100rpx;

}
.commentlist{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  margin-top: 10px;
}
.comment-main{
  width: 84%;
}
.comment-logo{
  width: 16%;
}
.comment-logo image{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
}
.comment-main .date{
  font-size: 25rpx;
  color:#666;
  line-height: 50rpx;
}
.comment-main .username{
  font-size: 30rpx;
  color:#666;
  line-height: 50rpx;
}
.score{
  font-size: 25rpx;
  color:#666;
  line-height: 50rpx;
}
.commenttext{
  font-size: 25rpx;
  color:#666;
  line-height: 60rpx;
}
.commentimg{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  margin-top: 5px;
}
.commentimg image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 10px;
}
.nothave{
  margin-top: 5em;
}
.nothave image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  opacity: 0.6;
}
.nothave text{
  display: block;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 35rpx;
  color: #8a8a8a;
  text-shadow: 0px 0px 3px rgba(0,0,0,0.2);
  padding-top: 2em;
}
.answer{
  width: 100%;
  height: auto;
}
.answertit{
  font-size: 30rpx;
  color:#f54449;
  line-height: 60rpx;
}
.answercon{
  font-size: 25rpx;
  color:#666;
  line-height: 60rpx;
}
.showbigimg{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  z-index: 5;
}
.close{
  width:80rpx;
  height: 80rpx;
  position: fixed;
  right: 10rpx;
  top: 10rpx;
  z-index:20;
background:rgba(0,0,0,.63);
border-radius:50%;

}
.close image{
  width: 80rpx;
  height: 80rpx;
}
.plimgs{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  overflow-y: scroll;
}
.plimgs image{
  width: 100%;
}
