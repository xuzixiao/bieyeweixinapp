/* pages/select/select.wxss */
.selectlist{
  padding: 10px;
  border-bottom: 1px solid #e3e3e3;
}
.selectmain{
  display: flex;
  display: -webkit-flex;
  padding: 10px 0px;
  flex-wrap: wrap ;
}
.selectlist .title{
  font-size:30rpx;
  line-height: 80rpx; 
}
.selectmain text{
  width: 21%;
  margin:5px 2%;
  border-radius: 20px;
  box-shadow: 0px 1px 3px rgba(0,0,0,.1);
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  color: #333;
}
.selectmain .active{
  background:#f54449;
  color: #fff;
}
.choserennum{
  text-align: center;
  justify-content: space-between;
}
.choserennum .add,.choserennum .sub{
width: 80rpx;
height: 80rpx;
border-radius: 50rpx;
font-size: 50rpx;
line-height: 80rpx;
text-align: center;
font-weight: bold;
}
.choserennum .peoplenum{
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
}
.pricesilde{
  width: 100%;
  height: 160rpx;
}
.select-btn{
  width: 100%;
  height: 100rpx;
  position:fixed;
  left: 0px;
  bottom: 0px;
  display: flex;
  border-top: #e3e3e3 solid 1rpx;
  background: #fff;
}
.select-btn .clear{
  width: 40%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}
.select-btn .confim{
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #f54449;
  color: #fff;
  font-size: 36rpx;
}
.room-price{
  margin-bottom: 100rpx;
}