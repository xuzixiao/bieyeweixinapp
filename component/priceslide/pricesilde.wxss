.pricesile{
  display: block;
  width: 96%;
  height: 200rpx;
  position: relative;
  overflow: hidden;
  padding: 0 2%;
}
.priceline{
  display: block;
  width: 100%;
  height: 1px;
  background: #f54449;
  position:relative;
  left: 0px;
  top: 15%;
}
.leftline{
width:500rpx;
height:1px;
background:#969696;
position:absolute;
right:20px;
top:0px;
z-index:1;
}
.rightline{
width:500rpx;
height:1px;
background:#969696;
position:absolute;
left:20px;
top:0;
z-index:1;
}
.lefttap{
  width: 10px;
  height: 10px;
  position: absolute;
  left: 0px;
  top: -10px;
  background: #f54449;
  box-shadow: 0px 0px 5px rgba(0,0,0,.3);
  border-radius:50%;
  border: #fff solid 10px; 
  z-index: 2;
}
.righttap{
  width: 10px;
  height: 10px;
  position: absolute;
  left: 0px;
  top: -10px;
  background: #f54449;
  box-shadow: 0px 0px 5px rgba(0,0,0,.3);
  border-radius:50%; 
  border: #fff solid 10px;
  z-index: 2;
}
.section{
  width: 100%;
  float: left;
  display: flex;
  margin-top: 60rpx;
}
.section text{
  width: 50%;
  display: inline-block;
  font-size: 20rpx;
  box-shadow:none;
  margin: 0px;
}
.section .curstart{
  text-align: left;
}
.section .curend{
  text-align: right;
}
.section .cur{
  color: #f54449;
}
.value{
  width: 100%;
  height: 50rpx;
  display: flex;
}
.value text{
  box-shadow:none;
  width: auto;
}