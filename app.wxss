/**app.wxss**/
@import "weui.wxss";
/* 设施图标 */

@import "/static/fonticon/css/iconfont.wxss";

/* 设备设施结束 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

/* 加载更多 */
.loadmore{
  width: 100%;
  height: 100rpx;
  background: #fff;
  text-align: center;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  margin-top: 10rpx;
}
.loadmore text{
  display:inline-block;
  width: auto;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #666;
}
.loadmore image{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  margin: 20rpx 5rpx;
  padding: 0px;
}
